{
    "name": "@a7mooz/create-djs-handler",
    "version": "0.1.14",
    "description": "A cli tool that helps you build strongly typed discord.js handler inspired by WOKCommands",
    "main": "dist/index.js",
    "bin": "dist/index.js",
    "type": "module",
    "private": false,
    "scripts": {
        "start": "node .",
        "test": "vitest run",
        "test:watch": "vitest",
        "pretty": "prettier -w .",
        "build": "rimraf dist && tsc",
        "lint": "eslint --fix src/**/*.ts",
        "clean": "node dist/scripts/clean.js",
        "dev": "pnpm build --inlineSourceMap && pnpm clean && pnpm start",
        "check-templates": "cd templates/TypeScript && pnpm i --silent && pnpm build",
        "release": "pnpm build && changeset publish"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/A7mooz/djs-handler.git"
    },
    "keywords": [
        "discord.js",
        "djs",
        "wokcmds",
        "wokcommands",
        "handler"
    ],
    "author": "A7mooz",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/A7mooz/djs-handler/issues"
    },
    "homepage": "https://github.com/A7mooz/djs-handler#readme",
    "dependencies": {
        "chalk": "^5.2.0",
        "figlet": "^1.5.2",
        "inquirer": "^9.1.4",
        "nanospinner": "^1.1.0",
        "validate-npm-package-name": "^5.0.0"
    },
    "devDependencies": {
        "@changesets/cli": "^2.26.0",
        "@types/figlet": "^1.5.5",
        "@types/inquirer": "^9.0.3",
        "@types/validate-npm-package-name": "^4.0.0",
        "@typescript-eslint/eslint-plugin": "^5.53.0",
        "@typescript-eslint/parser": "^5.53.0",
        "eslint": "^8.35.0",
        "prettier": "^2.8.4",
        "rimraf": "^4.1.2",
        "typescript": "^4.9.5",
        "vitest": "^0.29.1"
    },
    "prettier": {
        "semi": true,
        "trailingComma": "all",
        "singleQuote": true,
        "printWidth": 100,
        "tabWidth": 4
    }
}
