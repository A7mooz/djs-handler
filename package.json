{
    "name": "@a7mooz/create-djs-handler",
    "version": "0.1.20",
    "description": "A cli tool that helps you build strongly typed discord.js handler inspired by WOKCommands",
    "main": "dist/index.js",
    "bin": "dist/index.js",
    "type": "module",
    "private": false,
    "scripts": {
        "start": "node --enable-source-maps .",
        "test": "vitest run",
        "test:watch": "vitest",
        "pretty": "prettier -w .",
        "build": "rimraf dist && tsc",
        "lint": "eslint --fix src/**/*.ts",
        "clean": "node --enable-source-maps dist/scripts/clean.js",
        "dev": "pnpm build && pnpm clean && pnpm start",
        "check-templates": "cd templates/TypeScript && pnpm i --silent && pnpm typecheck",
        "release": "pnpm build --incremental false && changeset publish"
    },
    "files": [
        "dist"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/A7mooz/djs-handler.git"
    },
    "keywords": [
        "discord.js",
        "djs",
        "wokcmds",
        "wokcommands",
        "handler"
    ],
    "author": "A7mooz",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/A7mooz/djs-handler/issues"
    },
    "homepage": "https://github.com/A7mooz/djs-handler#readme",
    "dependencies": {
        "chalk": "^5.3.0",
        "figlet": "^1.6.0",
        "inquirer": "^9.2.10",
        "nanospinner": "^1.1.0",
        "validate-npm-package-name": "^5.0.0"
    },
    "devDependencies": {
        "@changesets/cli": "^2.26.2",
        "@types/figlet": "^1.5.6",
        "@types/inquirer": "^9.0.3",
        "@types/validate-npm-package-name": "^4.0.0",
        "@typescript-eslint/eslint-plugin": "^6.4.1",
        "@typescript-eslint/parser": "^6.4.1",
        "eslint": "^8.48.0",
        "prettier": "^3.0.2",
        "rimraf": "^5.0.1",
        "typescript": "^5.2.2",
        "vitest": "^0.34.3"
    },
    "prettier": {
        "semi": true,
        "trailingComma": "all",
        "singleQuote": true,
        "printWidth": 100,
        "tabWidth": 4
    }
}
