{
    "name": "@a7mooz/create-djs-handler",
    "version": "0.1.10",
    "description": "Strongly typed discord.js handler inspired by WOKCommands",
    "main": "dist/index.js",
    "bin": "dist/index.js",
    "type": "module",
    "private": false,
    "scripts": {
        "build": "rimraf dist && tsc",
        "clean": "node dist/helpers/clean",
        "check-templates": "cd templates/TypeScript && pnpm i --silent && pnpm build",
        "start": "node .",
        "dev": "pnpm build --inlineSourceMap && pnpm clean && pnpm start",
        "pretty": "prettier -w .",
        "lint": "eslint --fix src/**/*.ts",
        "release": "pnpm lint && pnpm build && pnpm check-templates && pnpm clean && changeset publish"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/A7mooz/djs-handler.git"
    },
    "keywords": [
        "discord.js",
        "djs",
        "wokcmds",
        "wokcommands",
        "handler"
    ],
    "author": "A7mooz",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/A7mooz/djs-handler/issues"
    },
    "homepage": "https://github.com/A7mooz/djs-handler#readme",
    "dependencies": {
        "chalk": "^5.2.0",
        "figlet": "^1.5.2",
        "inquirer": "^9.1.4",
        "nanospinner": "^1.1.0",
        "validate-npm-package-name": "^5.0.0"
    },
    "devDependencies": {
        "@changesets/cli": "^2.26.0",
        "@types/figlet": "^1.5.5",
        "@types/inquirer": "^9.0.3",
        "@types/validate-npm-package-name": "^4.0.0",
        "@typescript-eslint/eslint-plugin": "^5.50.0",
        "@typescript-eslint/parser": "^5.50.0",
        "eslint": "^8.33.0",
        "prettier": "^2.8.3",
        "rimraf": "^4.1.2",
        "ts-toolbelt": "^9.6.0",
        "typescript": "^4.9.5"
    },
    "prettier": {
        "semi": true,
        "trailingComma": "all",
        "singleQuote": true,
        "printWidth": 100,
        "tabWidth": 4
    }
}
