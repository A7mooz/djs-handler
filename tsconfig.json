{
    "compilerOptions": {
        "incremental": true,
        "target": "ESNext",
        "module": "NodeNext",
        "resolveJsonModule": true,
        "outDir": "dist",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "alwaysStrict": true,
        "skipLibCheck": true
    },
    "exclude": ["templates", "vite.config.ts", "tests"]
}
