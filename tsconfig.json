{
    "compilerOptions": {
        "incremental": true,
        "tsBuildInfoFile": "dist/tsconfig.tsbuildinfo",
        "target": "ESNext",
        "module": "NodeNext",
        "rootDir": "src",
        "resolveJsonModule": true,
        "outDir": "dist",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "alwaysStrict": true,
        "skipLibCheck": true
    },
    "exclude": ["templates", "test"]
}
