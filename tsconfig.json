{
    "compilerOptions": {
        "incremental": true,
        "target": "ES2022",
        "lib": ["ES2022"],
        "module": "Node16",
        "resolveJsonModule": true,
        "outDir": "dist",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "alwaysStrict": true,
        "skipLibCheck": true
    },
    "include": ["src"]
}
